@page
@model LoginModel

@{
    ViewData["Title"] = "Prisijungti";
}


<div class="row">
    <div class="d-flex justify-content-center">
        <form id="account" method="post" class="w-50">
            <h1 class="mt-3 mb-5">@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label">El. paštas</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>  
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label">Slaptažodis</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox ms-4 my-4 ">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                         @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
            <div class="m-4">
                <a id="forgot-password" class="row" asp-page="./ForgotPassword">Pamiršai slaptažodį?</a>
                <a asp-page="./Register" class="row" asp-route-returnUrl="@Model.ReturnUrl">Registruok naują paskyrą</a>
                <a id="resend-confirmation" class="row" asp-page="./ResendEmailConfirmation">Dar kartą atsiųsti el. pašto patvirtinimą</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

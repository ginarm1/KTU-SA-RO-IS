@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

<div class="row">
    <div class="d-flex justify-content-center border-1">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1 class="mt-3 mb-5">@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating row my-2">
                <div class="col-6">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label asp-for="Input.Surname"></label>
                    <input asp-for="Input.Surname" class="form-control" autocomplete="surname" aria-required="true" />
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating row my-4">
                <div class="col-6">
                    <label>Atstovybė</label>
                </div>
                <div class="col-6">
                    <select asp-for="Input.Representative" class="form-control w-75">
                        <option>csa</option>
                        <option>infosa</option>
                        <option>esa</option>
                        <option>fumsa</option>
                        <option>indi</option>
                        <option>shm</option>
                        <option>statius</option>
                        <option>vfsa</option>
                        <option>vivat</option>
                        <option>panfisa</option>
                    </select>
                </div>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username"/>
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

@model IEnumerable<KTU_SA_RO.Models.EventTeam>

@{
    ViewData["Title"] = "Renginių komandos";
}

<h1>Renginių komandos</h1>

@if (TempData["success"] != null)
{
    <div class="alert alert-success" role="alert">
        @Html.Raw(TempData["success"].ToString())
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Renginio pavadinimas
            </th>
            <th>
                Komandos nario vardas pavardė
            </th>
            <th>
                Ar yra renginio koordinatorius
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Events.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Events.CoordinatorName) @Html.DisplayFor(modelItem => item.Events.CoordinatorSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_event_coord)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

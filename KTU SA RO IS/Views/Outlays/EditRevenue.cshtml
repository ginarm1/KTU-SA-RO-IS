@model KTU_SA_RO.Models.Revenue

@{
    ViewData["Title"] = "Redaguoti pajamas";
}

<div class="row">
   <div class="d-flex justify-content-center">
        <form asp-action="EditRevenue">
            <div class="display-6 mt-4 mb-5 fw-bold">@ViewData["Title"]</div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Event.Id" />
            <div class="row">
                <div class="col-6 form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="Earned" class="control-label"></label>
                    <input asp-for="Earned" type="number" step="0.01" min='0' max='999999' class="form-control" />
                    <span asp-validation-for="Earned" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6 form-group">
                    <label asp-for="InvoiceNr" class="control-label"></label>
                    <input asp-for="InvoiceNr" class="form-control" />
                    <span asp-validation-for="InvoiceNr" class="text-danger"></span>
                </div>
                <div class="col-5 form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" id="datePickerId" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Details" asp-controller="Events" asp-route-id="@Model.Event.Id" class="btn btn-outline-dark text-uppercase">← Grižti į renginio detales</a>
                <input type="submit" value="Patvirtinti" class="btn btn-primary text-uppercase rounded-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts 
{
<script>
    // max date input is today
    datePickerId.max = new Date().toISOString().split("T")[0];
</script>
}


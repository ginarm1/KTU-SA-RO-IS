@model KTU_SA_RO.Models.Sponsor

@{
    ViewData["Title"] = "Sukurti rėmėją";
}

<div class="row">
    <div class="d-flex justify-content-center">
        <form asp-action="Create">
            <div class="display-6 mt-4 mb-5 fw-bold ">@ViewData["Title"]</div>
            <hr />
            @if (TempData["danger"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.Raw(TempData["danger"].ToString())
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyVAT" class="control-label"></label>
                <input asp-for="CompanyVAT" class="form-control" />
                <span asp-validation-for="CompanyVAT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-5 form-group">
                    <label asp-for="PhoneNr" class="control-label"></label>
                    <input asp-for="PhoneNr" class="form-control" type="tel" />
                    <span asp-validation-for="PhoneNr" class="text-danger"></span>
                </div>
                <div class="col-7 form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-5 form-group">
                    <label asp-for="CompanyHeadName" class="control-label"></label>
                    <input asp-for="CompanyHeadName" class="form-control" />
                    <span asp-validation-for="CompanyHeadName" class="text-danger"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="CompanyHeadSurname" class="control-label"></label>
                    <input asp-for="CompanyHeadSurname" class="form-control" />
                    <span asp-validation-for="CompanyHeadSurname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-4">
                <a asp-action="Index" class="btn btn-outline-dark text-uppercase"><i class="fas fa-arrow-left"></i> Grižti į sąrašą</a>
                <input type="submit" value="Patvirtinti" class="btn btn-primary text-uppercase rounded-2" id="submit" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
